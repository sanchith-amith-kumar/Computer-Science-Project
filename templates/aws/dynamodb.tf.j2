resource "aws_dynamodb_table" "{{ table_name }}" {
  name           = "{{ table_name }}"
  billing_mode   = "PAY_PER_REQUEST"
  hash_key       = "{{ hash_key }}"
  attribute {
    name = "{{ hash_key }}"
    type = "S"
  }
  tags = {
    Environment = "{{ environment }}"
    Project     = "IntelligentIaC"
  }
}
